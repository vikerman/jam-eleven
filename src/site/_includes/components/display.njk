{% macro medium(image, subtitle, category) %}
    <div class="lg:w-flex-half
    mb-4 lg:mb-0
    bg-light p-8 pb-0 hover:bg-light-200">
        <a href="/{{ category | slug }}">
            <div class="flex flex-column justify-center items-center h-56">
                <img src={{ image }} alt={{ category | titlify }} class="w-3/5"/>
            </div>
            <div class="">
                <p class="text-3xl font-semibold mb-1">{{ category | titlify }}</p>
                <p class="text-xs text-gray-700">{{ subtitle }}</p>
            </div>
        </a>
    </div>
{% endmacro %}

{% macro small(image, subtitle, title) %}
    <div class="lg:w-flex-fourth bg-light
  px-6 pt-10 pb-2 lg:p-6 lg:pb-0
  hover:bg-light-200 lg:mb-0 mb-4">
        <a href="/products/{{ title | slug }}">
            <div class="flex flex-column justify-center items-center h-32">
                <img alt={{ title }} src={{ image }} class="w-3/5"></img>
            </div>
            <div class="">
                <p class="text-xl font-semibold mb-1">{{ title }}</p>
                <p class="text-xs text-gray-700 mb-4">{{ subtitle | getTrimmed(150) }}</p>
            </div>
        </a>
    </div>
{% endmacro %}